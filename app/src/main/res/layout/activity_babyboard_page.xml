<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawerlayout_babyboard"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6B6B4">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_babyboard"
            android:background="#F6B6B4"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            android:minHeight="56dp" />

        <android.support.v7.widget.RecyclerView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:background="@color/color_white"
            android:id="@+id/babyboard_recyclerView"
            >

        </android.support.v7.widget.RecyclerView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_white"
            android:id="@+id/babyBoardListview"/>

    </LinearLayout>

    <ListView
        android:layout_gravity="start"
        android:orientation="vertical"
        android:id="@+id/drawerlist_babyboard"
        android:background="#ffededed"
        android:layout_width="240.0dip"
        android:layout_height="fill_parent" />
</android.support.v4.widget.DrawerLayout>


